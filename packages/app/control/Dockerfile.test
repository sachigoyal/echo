FROM node:20-alpine

# Install curl for healthcheck
RUN apk add --no-cache curl

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy monorepo workspace files
COPY pnpm-workspace.yaml pnpm-lock.yaml ./

# Copy all workspace package.json files to satisfy pnpm workspace requirements
COPY echo-control/package.json ./echo-control/
COPY echo-server/package.json ./echo-server/
COPY echo-typescript-sdk/package.json ./echo-typescript-sdk/
COPY echo-react-sdk/package.json ./echo-react-sdk/
COPY integration-tests/package.json ./integration-tests/

# Install dependencies for the entire workspace
RUN pnpm install --frozen-lockfile

# Copy echo-control source code
COPY echo-control/ ./echo-control/

# Set working directory to echo-control
WORKDIR /app/echo-control

# Generate Prisma client
RUN pnpm prisma:generate

# Build the application
RUN pnpm build

EXPOSE 3000

# Default command (can be overridden by docker-compose)
CMD ["pnpm", "start"]